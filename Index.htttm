    function createPlayer() {
        if (ytPlayer) return;
        ytPlayer = new YT.Player(elements.youtubePlayerDiv, {
            height: '100%',
            width: '100%',
            playerVars: {
                'playsinline': 1,
                'autoplay': 1,
